  <style>
    body {

      font-family: Arial, sans-serif;
    }

    form {
      max-width: 400px;
      margin: 50px auto;
      padding: 20px;
      background-color: #ffffff;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    label {
      display: block;
      margin-bottom: 8px;
    }

    input[type="text"],[type="file"],[type="number"],[type="submit"] {
      width: 100%;
      padding: 8px;
      margin-bottom: 16px;
      box-sizing: border-box;
      background-color: #ffffff;
      color: #000000;
      border: 1px solid #444;
      border-radius: 4px;
    }

    

    input[type="radio"] {
      accent-color: red; /* Replace with your default color code */
    }

    /* Background color for radio buttons when checked */
    input[type="radio"]:checked {
      background-color: #aaffaa; /* Replace with your checked color code */
    }

    input[type="submit"] {
      background-color: #555;
      color: #fff;
      cursor: pointer;
    }

    input[type="submit"]:hover {
      background-color: #777;
    }

