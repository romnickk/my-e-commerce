<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <title>Product List</title>
  <style>

*{
font-family: Arial, sans-serif;
margin: 0;
padding:0;
 }
.main {
  display: flex;
  justify-content: center;
  align-items: center;
  max-width: 80%;
  margin: auto;
  padding-top: 6px;
 
}

.grid-container {
  justify-content: flex-start;
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 13px;
  /* border: 1px solid #ddd; */
  /* max-width: 80%; */
  /* margin: auto; */
  width: 80%;
}


.grid-item {
  border: 1px solid #ddd;
  position: relative;
  text-align:center;
  width: 165px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
            /* padding: 10px; */
            /* background: blue; */
  height: 258px;
  transition:all 0.5s ease;
}

.grid-item:hover{
  bottom: 1px;
  border: 1px solid red;
  
}

.grid-item .sale{
  position: absolute;
  top: 0px;
  right: 0px;
  background: rgb(246, 238, 176);
  color: orangered;
  font-size: 12px;
  font-family: 'Times New Roman', Times, serif;
  font-weight: bold;
  padding: 2px;
}

.grid-item h4, p{

  text-align:left;
 
}
.grid-item{

text-align:right;

}
.grid-item h4,p{

margin: 5px;

}
/* Define the styles for the orange button */
.orange-button {
    background-color: orange;
    color: white; /* Set the text color to white for better visibility */
    padding: 5px 10px; /* Adjust the padding as needed */
    font-size: 16px; /* Adjust the font size as needed */
    border: none; /* Remove the default button border */
    cursor: pointer; /* Change the cursor to a pointer on hover for better user experience */
    border-radius: 5px; /* Optional: Add rounded corners */
    margin-right: 10px;
}

/* Optional: Add hover effect */
.orange-button:hover {
    background-color: darkorange;
}
.scroll-container {
            max-height: 650px; /* Set your preferred height */
            overflow: auto;

        }



form {
      display: flex;
      justify-content: center;
      margin-bottom: 0px;
    }

    input[type="text"] {
      padding: 8px;
      font-size: 16px;
      border: 1px solid #ddd;
      border-radius: 5px;
      margin-right: 10px;
      /* margin-top: 20px; */
      width: 400px;
    }

    button {
      padding: 10px;
      font-size: 16px;
      background-color: orange;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      
      /* margin-top: 20px; */
    }

    button:hover {
      background-color: darkorange;
    }



        
      

        nav {
            background-color: #000; /* Set the background color to black */
            color: #fff; /* Set the text color to white */
            padding-top: 20px;
            text-align: left;
            height: 80px;
        }

        nav a {
          
            color: #fff; /* Set the link text color to white */
            text-decoration: none;
            margin: 0 15px;
        }

        .radio-button-label {
      display: inline-block;
      padding:5px 10px;
      margin: 5px;
      background-color: #db8234;
      color: #fff;
      
      border-radius: 5px;
      cursor: pointer;
    }

    /* Hide the actual radio button */
    .radio-button-label input {
      display: none;
    }

    /* .radio-button-label :hover {
      background-color: red;
    } */

    /* Style the radio button when checked */
    /* .radio-button-label input:checked + span {
      background-color: #660606;
    } */

    .third{
    display: flex;
    justify-content: center;
    /* align-items: center; */
    max-width: 80%;
    margin: auto;
    background: white;
    padding-top: 15px;
    margin-top: 5px;
}

.slider{
    width: 600px;
    height: 200px;
    overflow: hidden;
    text-align: center;
}
.slides{
width: 500%;
height: 200px;
display: flex;

}
.slides input{
    display: none;
}
.slide{
    width: 20%;
    transition: 1s;
   
}

.slide img{
    width: 600px;
    height: 180px;
    

}


#radio1:checked ~ .first{
    margin-left: 0%;
}
#radio2:checked ~ .first{
    margin-left: -20%;
}
#radio3:checked ~ .first{
    margin-left: -40%;
}
#radio4:checked ~ .first{
    margin-left: -60%;
}

.nav-auto{
    position: absolute;
    display: flex;
    width: 600px;
    justify-content: center;
    margin-top: 160px;
    
}



.nav-auto div{
background-color: rgb(197, 191, 191);

padding: 5px;
border-radius: 10px;
transition: 1s;
}

.nav-auto div:not(:last-child){
    margin-right: 25px;
}
#radio1:checked ~ .nav-auto .auto-btn1{
    background: yellow;
}
#radio2:checked ~ .nav-auto .auto-btn2{
    background: yellow;
}
#radio3:checked ~ .nav-auto .auto-btn3{
    background: yellow;
}
#radio4:checked ~ .nav-auto .auto-btn4{
    background: yellow;
}
body{
  background: whitesmoke;
}

    
    
    </style>


</head>

<nav> 

  <a href="/product-list">Product</a>
  <a href="/myorder">My Order</a>
  <a href="/add-product">Add Product</a>
  <form action="/product-list" method="post">
    <input type="text" name="search" placeholder="Search products">
    <button type="submit">Search</button>
  </form>
</nav>





<body>

  <div class="third">
    <div class="slider">
        <div class="slides">
            <input type="radio" name="radio-btn" id="radio1">
            <input type="radio" name="radio-btn" id="radio2">
            <input type="radio" name="radio-btn" id="radio3">
            <!-- <input type="radio" name="radio-btn" id="radio4"> -->

            <div class="slide first">
                <img src="/images/banner1.jpg" alt="">
            </div>
            <div class="slide">
                <img src="/images/banner2.jpg" alt="">
            </div>
            <div class="slide">
              <img src="/images/banner3.png" alt="">
          </div>
          <div class="slide">
            <img src="/images/banner4.png" alt="">
        </div>

            <div class="nav-auto">
                <div class="auto-btn1"></div>
                <div class="auto-btn2"></div>
                <div class="auto-btn3"></div>
                <!-- <div class="auto-btn4"></div> -->
            </div>

        </div>
        </div>
        </div>


  <form id="myForm" action="/categories" method="">
    <label class="radio-button-label">
      <input type="checkbox" name="category" value="shoes" onchange="document.getElementById('myForm').submit()">
      <!-- <input type="radio" name="radioGroup" value="option1"> -->
      <span>Shoes</span>
    </label>
  
    <label class="radio-button-label">
      <input type="checkbox" name="category" value="clothing" onchange="document.getElementById('myForm').submit()">
      <!-- <input type="radio" name="radioGroup" value="option2"> -->
      <span>Clothing</span>
    </label>
  
    <label class="radio-button-label">
      <input type="checkbox" name="category" value="bag" onchange="document.getElementById('myForm').submit()">
      <span>Bag</span>
    </label>
    
    
  </form>

  
  <p style="text-align: center; background-color: white; font-size: 20px; color: orange; max-width: 80%; margin: auto; border-bottom: 3px solid orangered; padding: 5px;">Daily Discover</p>
  <div class="main">
    <div class="second">
    <div class="">
       
  <div class="grid-container">
    
    <% list.forEach(shoes => { %>
      <div class="grid-item" onclick="buy()">
        <img src="data:image/<%= shoes.image.contentType %>;base64, <%= shoes.image.data.toString('base64') %>"  style="width:165px; height:165px;">
        <p style="font-size: 15px;"><%= shoes.title %></p>
        <p style="color: rgb(217, 47, 0); font-size: 15px;">$ <%= shoes.price %></p>
        <span><button  class="orange-button" style="margin-right: 10x;">Buy</button></span>

        <div class="sale">-90%</div>
    </div>
    <% }); %>
  </div>
</div>
</div>
  </div>

  <script>
     var counter = 1;
     setInterval(function(){
        document.getElementById('radio'+ counter).checked = true;
        counter++;

        if(counter > 3){
            counter = 1;
        }

     }, 5000);

     function buy(){
      window.location.href = "/myorder"
     }
   
  </script>

</body>
